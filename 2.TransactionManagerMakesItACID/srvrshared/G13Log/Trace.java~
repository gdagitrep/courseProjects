// -------------------------------// adapted from Kevin T. Manley// CSE 593// -------------------------------package G13Log;// A simple wrapper around System.out.println, allows us to disable some//  of the verbose output from RM, TM, and WC if we wantpublic class Trace{  static boolean traceEnabled = true;  static  {    try { traceEnabled = Boolean.parseBoolean(System.getenv("TRACE_ENABLED")); }    catch(Exception e) { }  }		public static void info( String msg )		{			if(traceEnabled) System.out.println( getThreadID() + " INFO: " + msg );		}		public static void warn( String msg )		{			if(traceEnabled) System.out.println( getThreadID() + " WARN: " + msg );		}		public static void error( String msg )		{			if(traceEnabled) System.err.println( getThreadID() + " ERROR: " + msg );		}		private static String getThreadID()		{			String s = Thread.currentThread().getName();			// shorten...			// "RMI TCP Connection(x)-hostname/99.99.99.99"			// to			// "RMI TCP Cx(x)"			if( s.startsWith( "RMI TCP Connection(" ) ) {				return "RMI Cx" +  s.substring( s.indexOf('('), s.indexOf(')') ) + ")";			} // if			return s;		}}